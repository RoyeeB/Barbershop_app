<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/back_BTN_register"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:src="@drawable/ic_arrow_back"
        android:scaleType="fitCenter"
        app:backgroundTint="#999DA0"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/welcome_LBL_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Create new account" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fullname_LBL_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_LBL_register"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Full name"

        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/name_EDT_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_alignStart="@+id/fullname_LBL_register"
        android:hint="Enter Your Name"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="@drawable/rounded_edittext"
        android:textSize="20sp"
        android:layout_below="@id/fullname_LBL_register"
        android:inputType="textPersonName" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/email_LBL_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_EDT_register"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Email"

        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/email_EDT_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_alignStart="@+id/email_LBL_register"
        android:hint="Enter Your Email"
        android:textSize="20sp"
        android:padding="8dp"
        android:layout_below="@id/email_LBL_register"
        android:background="@drawable/rounded_edittext"
        android:textStyle="bold"
        android:inputType="textEmailAddress" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/password_LBL_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_EDT_register"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Password"

        />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/password_EDT_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_LBL_register"
        android:layout_alignStart="@+id/password_LBL_register"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/phone_LBL_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_EDT_register"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Phone"

        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/phone_EDT_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_alignStart="@+id/phone_LBL_register"
        android:hint="Enter Your Phone Number"
        android:layout_below="@id/phone_LBL_register"
        android:background="@drawable/rounded_edittext"
        android:textStyle="bold"
        android:padding="8dp"
        android:textSize="20sp"
        android:inputType="phone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signup_BTN_register"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_EDT_register"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="Sign up"
        app:backgroundTint="@color/black"
        />









</RelativeLayout>