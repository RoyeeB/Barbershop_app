<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/back_BTN_signin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:src="@drawable/ic_arrow_back"
        android:scaleType="fitCenter"
        android:backgroundTint="#999DA0"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/signin_LBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Sign In" />



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/email_LBL_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin_LBL"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Email"

        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/email_EDT_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_alignStart="@+id/email_LBL_signin"
        android:hint="Enter Your Email"
        android:textSize="20sp"
        android:padding="8dp"
        android:layout_below="@id/email_LBL_signin"
        android:background="@drawable/rounded_edittext"
        android:textStyle="bold"
        android:inputType="textEmailAddress" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/password_LBL_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_EDT_signin"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Password"

        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/password_EDT_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_alignStart="@+id/password_LBL_signin"
        android:hint="Enter Your Password"
        android:textSize="20sp"
        android:layout_below="@id/password_LBL_signin"
        android:padding="8dp"
        android:background="@drawable/rounded_edittext"
        android:textStyle="bold"
        android:inputType="textPassword" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/signin_BTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_EDT_signin"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="Sign In"
        android:backgroundTint="@color/black"
        />





</RelativeLayout>