<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#999DA0"
    >

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/back_BTN_topay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_back"
        android:textSize="20sp"
        android:backgroundTint="@color/background_color" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/my_LBL_topay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/back_BTN_topay"
        android:layout_centerHorizontal="true"
        android:text="You have to pay:"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price_LBL_topay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/my_LBL_topay"
        android:layout_centerHorizontal="true"
        android:text="50$"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pay_BTN_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Pay Now"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/black"/>

</RelativeLayout>